<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saved Command"
        android:textStyle="italic"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/lbl_saved_command"/>

    <TextView
        android:layout_below="@+id/lbl_saved_command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Command: "

        android:layout_alignTop="@+id/edtSavedCommand"
        android:layout_alignBottom="@+id/edtSavedCommand"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:id="@+id/txt_siteId"/>

    <EditText
        android:layout_below="@+id/lbl_saved_command"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Command"
        android:layout_toEndOf="@+id/txt_siteId"
        android:ems="10"
        android:id="@+id/edtSavedCommand"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/btn_delete_command"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/btn_edit_command"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        android:layout_below="@+id/edtSavedCommand"/>

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/btn_edit_command"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        android:layout_below="@+id/edtSavedCommand"/>

</RelativeLayout>