<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_ble"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_alignTop="@+id/layout_data"
                android:layout_alignBottom="@+id/layout_data"
                android:src="@drawable/ic_bluetooth_searching_black_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_data"
                android:layout_toEndOf="@+id/img_ble"
              >
                <TextView

                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_settings_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Bluetooth name" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_ble_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Bluetooth Address" />

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>